@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MayViet</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        :root {
          --color-cream: #faf8f3;
          --color-white: #ffffff;
          --color-brown-warm: #8b6f47;
          --color-brown-dark: #6b5639;
          --color-brown-gradient-start: #a0826d;
          --color-brown-gradient-end: #8b6f47;
          --color-text-dark: #2d2520;
          --color-text-light: #ffffff;
          --shadow-soft: 0 4px 20px rgba(0, 0, 0, 0.08);
          --radius-large: 24px;
          --radius-medium: 16px;
        }

        * {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
        }

        body {
          font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", system-ui, sans-serif;
          -webkit-font-smoothing: antialiased;
          -moz-osx-font-smoothing: grayscale;
        }

        .layout {
          min-height: 100vh;
          background-color: var(--color-cream);
          display: flex;
          flex-direction: column;
        }

        /* Header */
        .header {
          padding: 2rem 1.5rem;
        }

        .nav-container {
          max-width: 1200px;
          margin: 0 auto;
          background-color: var(--color-white);
          border-radius: var(--radius-large);
          box-shadow: var(--shadow-soft);
          padding: 1.25rem 2rem;
          display: flex;
          align-items: center;
          justify-content: space-between;
        }

        .nav-left {
          display: flex;
          align-items: center;
          gap: 0.75rem;
        }

        .nav-brand {
          font-size: 1.25rem;
          font-weight: 600;
          color: var(--color-text-dark);
        }

        .nav-menu {
          display: flex;
          list-style: none;
          gap: 2.5rem;
        }

        .nav-menu a {
          color: var(--color-text-dark);
          text-decoration: none;
          font-size: 0.9375rem;
          font-weight: 500;
        }

        .nav-menu a:hover {
          color: var(--color-brown-warm);
        }

        /* Main */
        .main-content {
          flex: 1;
          padding: 2rem 1.5rem;
        }

        .content-container {
          max-width: 1200px;
          margin: 0 auto;
        }

        /* Footer */
        .footer {
          background: linear-gradient(135deg, var(--color-brown-gradient-start), var(--color-brown-gradient-end));
          /* border-radius: 24px 24px 0 0; */
          padding: 3rem 1.5rem;
        }

        .footer-content {
          max-width: 900px;
          margin: 0 auto;
          text-align: center;
        }

        .footer-title {
          font-size: 1.5rem;
          font-weight: 600;
          color: var(--color-text-light);
        }

        .footer-subtitle {
          color: var(--color-text-light);
          font-size: 0.9375rem;
          opacity: 0.95;
          margin-top: 0.5rem;
        }

        /* Responsive */
        @@media (max-width: 768px) {
          .nav-container {
            flex-direction: column;
            gap: 1.5rem;
          }

          .nav-menu {
            flex-direction: column;
            gap: 1rem;
          }
        }
    </style>
</head>

<body>
    <div class="layout">

        <!-- Header -->
        <header class="header">
            <nav class="nav-container">
                <div class="nav-left">
                    <span class="nav-brand">MayViet</span>
                </div>
                <ul class="nav-menu">
                    <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                    <li><a asp-controller="Product" asp-action="Index">Sản phẩm</a></li>
                    <li><a asp-controller="About" asp-action="Index">Giới thiệu</a></li>
                    <li><a asp-controller="Contact" asp-action="Index">Liên hệ</a></li>
                </ul>
            </nav>
        </header>

        <!-- Main Content -->
        <main class="main-content">
            <div class="content-container">
                @RenderBody()
            </div>
        </main>

        <!-- Footer -->
        <footer class="footer">
            <div class="footer-content">
                <div class="footer-title">MayViet</div>
                <div class="footer-subtitle">
                    Thời trang thủ công – Chất liệu bền vững – Phong cách Việt
                </div>
            </div>
        </footer>

    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
