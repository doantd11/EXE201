@model List<Models.Product>

@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-bottom:24px;">Danh sách sản phẩm</h2>

<div style="
    display:grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap:24px;">

    @foreach (var item in Model)
    {
        <div style="
            background:#fff;
            border-radius:16px;
            padding:16px;
            box-shadow:0 6px 16px rgba(0,0,0,.08);
            text-align:center;">

            <img src="@item.MainImage"
                 alt="@item.ProductName"
                 style="
                    width:100%;
                    height:200px;
                    object-fit:cover;
                    border-radius:12px;" />

            <h3 style="margin-top:12px; font-size:1rem;">
                @item.ProductName
            </h3>
        </div>
    }
</div>
